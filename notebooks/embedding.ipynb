import pandas as pd
import pickle
import numpy as np
from sentence_transformers import SentenceTransformer
from sklearn.metrics.pairwise import cosine_similarity
from transformers import pipeline

df = pd.read_csv("data/processed/complaints_clean.csv")

with open("data/processed/complaint_embeddings.pkl", "rb") as f:
    embeddings = pickle.load(f)

model = SentenceTransformer("all-MiniLM-L6-v2")

generator = pipeline(
    "text-generation",
    model="google/flan-t5-base",
    max_new_tokens=200
)

def retrieve_context(query, top_k=5):
    query_embedding = model.encode([query])
    similarities = cosine_similarity(query_embedding, embeddings)[0]
    top_indices = similarities.argsort()[-top_k:][::-1]
    return df.iloc[top_indices]["Consumer complaint narrative"].tolist()

def rag_answer(query, top_k=5):
    contexts = retrieve_context(query, top_k)
    context_text = " ".join(contexts)
    prompt = f"""
    Use the following customer complaints to answer the question.
    Complaints:
    {context_text}

    Question:
    {query}

    Answer:
    """
    response = generator(prompt)
    return response[0]["generated_text"]

rag_answer("What are common issues customers face with credit cards?")

queries = [
    "Why do customers complain about credit cards?",
    "What issues are common with loan services?",
    "What problems do users report about BNPL services?",
    "Why are customers unhappy with customer service?",
    "What fraud-related issues appear most often?"
]

results = []

for q in queries:
    answer = rag_answer(q)
    results.append({
        "query": q,
        "answer": answer
    })

results_df = pd.DataFrame(results)

results_df.to_csv("data/processed/rag_sample_answers.csv", index=False)

