import pandas as pd
import pickle
from sentence_transformers import SentenceTransformer
from sklearn.metrics.pairwise import cosine_similarity


df = pd.read_csv("data/processed/complaints_clean.csv")

print("Dataset shape:", df.shape)
df.head()


texts = df["Consumer complaint narrative"].astype(str).tolist()


model = SentenceTransformer("all-MiniLM-L6-v2")

embeddings = model.encode(texts, show_progress_bar=True)

with open("data/processed/complaint_embeddings.pkl", "wb") as f:
    pickle.dump(embeddings, f)

with open("data/processed/complaint_embeddings.pkl", "rb") as f:
    loaded_embeddings = pickle.load(f)


def search_complaints(query, top_k=5):
    """
    Returns top_k complaints most semantically similar to the query
    """
    query_embedding = model.encode([query])
    similarities = cosine_similarity(query_embedding, loaded_embeddings)[0]
    top_indices = similarities.argsort()[-top_k:][::-1]

    return df.iloc[top_indices][
        ["Product", "Issue", "Company", "Consumer complaint narrative"]
    ]

search_complaints("credit card payment problem", top_k=5)
